<%- include('./partials/header') %>

<!-- Flash Messages Section -->
<% if(typeof success !== 'undefined' && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<% if(typeof error !== 'undefined' && error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-10 py-20 flex flex-grow">
        <!-- Sidebar Navigation -->
        <div class="w-[25%] flex flex-col items-start">
            <div class="flex flex-col sticky top-20">
                <a href="/shop" class="block w-fit mb-4 text-lg font-medium hover:text-blue-600">All Products</a>
                <a href="/products/create" class="block w-fit mb-4 text-lg font-medium hover:text-blue-600">Create New Product</a>
            </div>
        </div>

        <!-- Main Content -->
        <main class="w-3/4 bg-white p-8 shadow-lg rounded-lg ml-4">
            <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
            
            <form autocomplete="off" action="owners/product/create" method="post" enctype="multipart/form-data">
                <!-- Product Details Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4 border-b pb-2">Product Details</h3>
                    
                    <!-- Image Upload -->
                    <div class="mb-6">
                        <label class="block mb-3 font-medium text-gray-700">Product Image</label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center">
                            <input name="image" type="file" class="hidden" id="fileInput" accept="image/*">
                            <div id="previewContainer" class="mb-3 hidden">
                                <img id="imagePreview" class="max-h-40 mx-auto rounded">
                            </div>
                            <label for="fileInput" class="cursor-pointer bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg inline-block">
                                <i class="ri-upload-line mr-2"></i>Choose Image
                            </label>
                            <p class="text-sm text-gray-500 mt-2">PNG, JPG up to 5MB</p>
                        </div>
                    </div>
                    
                    <!-- Product Info Fields -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block mb-2 font-medium text-gray-700">Product Name</label>
                            <input name="name" type="text" placeholder="Enter product name" required
                                class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        
                        <div>
                            <label class="block mb-2 font-medium text-gray-700">Price (€)</label>
                            <input name="price" type="number" step="0.01" placeholder="0.00" required
                                class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        
                        <div>
                            <label class="block mb-2 font-medium text-gray-700">Discount Price (€)</label>
                            <input name="discount" type="number" step="0.01" placeholder="0.00"
                                class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                    </div>
                </div>
                
                <!-- Panel Styling Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4 border-b pb-2">Panel Styling</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <label class="block mb-2 font-medium text-gray-700">Background Color</label>
                            <div class="flex items-center">
                                <input name="bgcolor" type="color" value="#ffffff"
                                    class="h-10 w-10 cursor-pointer mr-3">
                                <input type="text" placeholder="#FFFFFF" 
                                    class="p-3 border rounded-lg flex-grow">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block mb-2 font-medium text-gray-700">Panel Color</label>
                            <div class="flex items-center">
                                <input name="panelcolor" type="color" value="#f3f4f6"
                                    class="h-10 w-10 cursor-pointer mr-3">
                                <input type="text" placeholder="#F3F4F6" 
                                    class="p-3 border rounded-lg flex-grow">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block mb-2 font-medium text-gray-700">Text Color</label>
                            <div class="flex items-center">
                                <input name="textcolor" type="color" value="#000000"
                                    class="h-10 w-10 cursor-pointer mr-3">
                                <input type="text" placeholder="#000000" 
                                    class="p-3 border rounded-lg flex-grow">
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <button type="submit" 
                    class="w-full md:w-auto px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-200">
                    Create Product
                </button>
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>

